{
  "manifest_version": 2,
  "name": "URL Scraper",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/google-sheets.png",
    "default_popup": "popup.html",
    "default_title": "Press shift + c and hover above a link to get its URL. Click this icon to download the collected URLS!"
  },
  "icons": {
      "16": "icons/google-sheets16.png",
      "32": "icons/google-sheets.png",
      "64": "icons/google-sheets64.png",
      "128": "icons/google-sheets128.png"
    }
}
